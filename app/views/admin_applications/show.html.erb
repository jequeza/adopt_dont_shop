<h1><%= @application.name %></h1>

<section id="application-<%= @application.id %>">
  <h2>Pets requested for Adoption: </h2>
  <% @application.application_pets.each do |application_pet| %>
    <p>I.D. : <%= application_pet.pet.id %> Name : <%= application_pet.pet.name %>
      <% if application_pet.status.nil? %>
        <%= link_to "Approve Pet", admin_app_update_path(status: "Approved", application_pet_id: application_pet.id), method: :patch, class: "pet-link-#{application_pet.pet.id}" %>
        <%= link_to "Reject Pet", admin_app_update_path(status: "Rejected", application_pet_id: application_pet.id), method: :patch, class: "pet-link-reject-#{application_pet.pet.id}" %>
      <% elsif application_pet.status == "Approved" %>
        <p>Approved</p>
        <% elsif application_pet.status == "Rejected" %>
        <p>Rejected</p>
      <% end %>
    </p>
  <% end %>
</section>