<%= form_with model: application, action: "/applications/", local: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name, required: true %>
  <%= f.label :address %>
  <%= f.text_field :address, required: true %>
  <%= f.label :city %>
  <%= f.text_field :city, required: true %>
  <%= f.label :state %>
  <%= f.text_field :state, required: true %>
  <%= f.label :zip %>
  <%= f.number_field :zip, required: true %>
  <%= f.label :description %>
  <%= f.text_area :description, size: "70 x 5", required: true %>

  <%= f.submit button_text %>
<% end %>
