<%= form_with model: application, action: "/applications/", local: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :address %>
  <%= f.text_field :address %>
  <%= f.label :city %>
  <%= f.text_field :city %>
  <%= f.label :state %>
  <%= f.text_field :state %>
  <%= f.label :zip %>
  <%= f.number_field :zip %>
  <%= f.label :description %>
  <%= f.text_area :description, size: "70 x 5" %>

  <%= f.submit button_text %>
<% end %>
